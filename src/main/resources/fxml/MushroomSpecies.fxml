<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>

<Tab text="Mushroom species" fx:id="mushroomSpeciesTab" fx:controller="controllers.MushroomSpeciesController" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <content>

    </content>
    <content>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <TableView fx:id="mushroomSpeciesTable" prefHeight="200.0" prefWidth="200.0" editable="true">
                    <columns>
                        <TableColumn prefWidth="75.0" text="ID" >
                            <cellValueFactory>
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Name" onEditCommit="#updateName">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                            <cellFactory>
                                <TextFieldTableCell fx:factory="forTableColumn" />
                            </cellFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Genus ID" onEditCommit="#updateGenusId">
                            <cellValueFactory>
                                <PropertyValueFactory property="genusId" />
                            </cellValueFactory>
                            <cellFactory>
                                <TextFieldTableCell fx:factory="forTableColumn" />
                            </cellFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </content>
</Tab>